<section id="main">

    <div id="account_settings" class="accountform">
        <h2><%= __('changepassword.title') %></h2>

        <form method="POST" action="<%= url_for_lang('save-account-password') %>">

            <p>
                <label for="oldpassword"><%= __('changepassword.oldpassword') %></label>
                <input type="password" id="oldpassword" name="oldpassword" required="required" />
            </p>

            <p>
                <label for="newpassword"><%= __('changepassword.newpassword') %></label>
                <input type="password" id="newpassword" name="newpassword" required="required" />
            </p>

            <p class="button">
                <button type="submit"><i class="fa fa-save"></i> <%= __('changepassword.button') %></button>
            </p>
        </form>
    </div>
</section>

<%- partial('common/private') %>
