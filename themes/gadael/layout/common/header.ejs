<header id="header">
    <div id="header-main" class="header-inner">
        <div class="outer">
            <a href="<%- url_for_lang() %>" id="logo">
                <%- (theme.customize.logo && theme.customize.logo.enabled ? '<i class="logo"></i>':'') %>
                <span class="site-title"><%= config.title %></span>
            </a>
            <nav id="main-nav">
                <% for (var i in theme.menu) { %>
                    <a class="main-nav-link" href="<%= url_for_lang(theme.menu[i]) %>"><%= __('menu.'+i) %></a>
                <% } %>
            </nav>

            <%- partial('search/index') %>
            <div class="sub-nav" ng-if="session.isLoggedIn">
                <div class="profile logged-in" id="profile-nav">
                    <a class="profile-anchor fa-stack fa-lg" title="<%= __('account.privatespace') %>" href="<%= url_for_lang('private') %>">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-user fa-stack-1x"></i>
                    </a>

                    <div class="menu-sessionpanel">
                        <%- partial('common/usersession') %>
                    </div>
                </div>
            </div>
            <div class="sub-nav" ng-if="!session.isLoggedIn">
                <a class="profile-anchor fa-lg" title="<%= __('account.privatespace') %>" href="<%= url_for_lang('private') %>">
                    <i class="fa fa-key"></i>
                </a>
            </div>
        </div>
    </div>
    <div id="main-nav-mobile" class="header-sub header-inner">
        <table class="menu outer">
            <tr>
                <% for (var i in theme.menu) { %>
                    <td><a class="main-nav-link" href="<%= url_for_lang(theme.menu[i]) %>"><%= __('menu.'+i) %></a></td>
                <% } %>
            </tr>
        </table>
    </div>
</header>
