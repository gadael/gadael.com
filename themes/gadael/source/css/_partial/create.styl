#create
    @media mq-normal
        column(profile-column)
    @media mq-tablet
        column(profile-column-tablet)

    .buttons
        padding: 2em 0 1em 0
        text-align: center

    button, .btn
        @extend $base-button

    .profile-block
        button
            background: color-button-onfire
            &:hover
                background: color-button-onfire + #111

.bio
    text-align: center




#create .inner .bio h2
    font-size: 1.3em
    font-weight: bold
    margin-top: 15px

#create .inner .bio p
    margin: 5px 20px 10px 20px
    text-align: justify
    max-width: 300px
    line-height: 1.5em

.profile-block
    padding: 15px 20px
    border-bottom: 1px solid color-border
    &:last-child
        border-bottom: none

#create
    .inner
        @extend $block
        margin-top: block-margin
        background: white

        form
            padding: line-height 0
            text-align: center
            input[type=text]
                @extend $base-input
                width: 6em
                text-align: right
            button
                margin-top: 2em
                background: color-button-onfire
                &:hover
                    background: color-button-onfire + #111

        .base-info
            #avatar
                display: block
                margin: 10px auto 20px
                width: profile-avatar-size
                height: profile-avatar-size
            #name, #title, #location
                display: block
                text-align: center
            #name
                font-size: 20px
                font-weight: 600
            #location
                font-size: font-size - 2
                margin-top: 5px
                color: color-default + #444
                .fa
                    margin-right: 5px

        .article-info
            clearfix()
            padding: 0px
            .article-info-block
                width: 50%
                float: left
                padding: 20px 15px
                text-align: center
                box-sizing: border-box
                font-size: font-size + 6px
                span
                    display: block
                    font-size: font-size
                    text-transform: uppercase
                &:first-child
                    border-right: 1px solid color-border

    &.card
        top: 50px
        right: 20px
        z-index: 999
        display: block
        min-width: 280px
        position: absolute
