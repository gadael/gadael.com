#private
    @media mq-normal
        column(profile-column)
    @media mq-tablet
        column(profile-column-tablet)

    #account
        @extend $block
        margin-top: block-margin

        .back
            @extend $back



.usersession
    p
        margin: 1em
        line-height: line-height

    .display-name
        display: block
        font-weight:bold
        text-align:center
        color: color-default

    .email
        color: color-grey

    .logout
        padding: 1em 0 0 0
        text-align:center

        a
            @extend $base-button
            background: color-button-soft
            &:hover
                background: color-button-onfire
