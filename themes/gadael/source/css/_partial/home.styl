#homepage
    @extend $base-style
    @extend $block
    margin: block-margin 0
    background: white

    .top-info
        height: 280px
        background: grey url(images/home-fruit.png) no-repeat 0 0
        .content
            padding: 2.5em 0 0 3em
            color: white
            text-shadow: 0 0 5px rgba(0,0,0,.7)
            font-weight: bold
            h2
                font-size: 4em

            p
                font-size: 2em
                margin: 3em 0 0 4em

    .bottom-info
        height: 280px
        background: white url(images/bottom-mountains.png) no-repeat 0 0

    .catch-your-eye
        padding: 5px 20px
        background:color-dark-background
        color:color-text-on-dark-background

        .customer-button, button
            @extend $base-button
            display:inline-block
            vertical-align: middle
        form button
            background: color-button-onfire
            &:hover
                background: color-button-onfire + #111
        form input[type=text]
            width: 6em
            text-align: right
            padding: 5px
            vertical-align: middle
            border: none
            background:transparent
            color:#fff
            border-bottom: #333 1px solid
            &:focus
                background:rgba(255,255,255,.1)

        .logged-in
            padding-top: .5em
            font-size: 16px
            .fa-user
                color: color-dark-background


    .product-description, .product-advantages
        padding: 2em
        font-size: 1.8em
        text-shadow: #fff 0 0 3px
        color: #3e3026

    .product-description
        background: color-fashy-background
        color: #3e3026
        .fa
            opacity:.4

    .product-advantages
        background: color-fashy-background + #111
        text-align:right

    .main-carousel
        background: #eaffc2
        padding: 1em 0 4em 0
        .carousel-cell
            width: 350px
            height: 300px
            margin: 40px

            .carousel-cell-image
                padding: 2px
                border:solid #bbb 1px;
                @extend $block-shadow
                margin: 20px
                width: 80%



    .functionalities
        padding: 3em 0
        text-align:center

        >div
            display: inline-block
            width: 33%
            min-width: 20em
            vertical-align: top

            >div
                min-height: 12em
                margin: .3em
                padding: 1em
                &:hover
                    background:#eee
                    i
                        color: color-button-onfire

            h3
                font-size: 1.6em
                color: #000
                text-shadow: 0 0 4px rgba(0,0,0,.3)
            p
                font-size: .9em

    .home-footer
        padding: 1em
        background:color-widget-background
        color:color-sidebar-text-dark
        text-align: right
        a
            @extend $link-dark
            margin-left: 2em
